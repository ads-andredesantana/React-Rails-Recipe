  


  <section class="form-auth text-center">
  <%= image_tag("HP2.JPG", alt: "Logo", class: "mb-4", :size => '72x57' ) %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 fw-normal">Please Log In</h1>
      <%= f.email_field :email, autofocus: true, class:"form-control", id: "inputEmail", placeholder: "Email", autocomplete: "current-email" %>

      <%# <label for="inputPassword" class="visually-hidden">Password</label> %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", autofocus: true, class:"form-control", id: "inputPassword" %>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted">Â© 2020-2021</p>
    <% end %>
  <%= render "devise/shared/links" %>
</section>




